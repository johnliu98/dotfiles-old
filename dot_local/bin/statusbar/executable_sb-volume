#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

case $BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	3) notify-send "ðŸ“¢ Volume" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.\nMiddle click to mute.\nScroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo "ïª€  " && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï€¨ "
elif [ "$vol" -gt "40" ]; then
	icon="ï©½ "
elif [ "$vol" -gt "20" ]; then
	icon="ï©¿ "
elif [ "$vol" -gt "0" ]; then
	icon="ï€¦ "
else
    echo "ïª€  " && exit
fi

printf "%s" "$icon$vol% "
