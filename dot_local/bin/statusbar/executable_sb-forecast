#!/bin/sh

# Displays todays precipication chance (â˜”) and dail weather ðŸŒž..

# If we have internet, get a weather report from wttr.in and store it locally.
# You could set up a shell alias to view the full file in a pager in the
# terminal if desired. This function will only be run once a day when needed.
weatherreport="${XDG_DATA_HOME:-$HOME/.local/share}/weatherreport"
getforecast() { curl -sf "wttr.in" > "$weatherreport" || exit 1 ;}

# Some very particular and terse stream manipulation.
showweather() { printf "%s" "$(sed '16q;d' "$weatherreport" |
	grep -wo "[0-9]*%" | sort -rn | sed "s/^/â˜” /g;1q" | tr -d '\n')" 
  echo " $(curl -s 'wttr.in?format=3' | cut -d ' ' -f 3 | cut -c 1-3)$(curl -s 'wttr.in?format=3' | cut -d ' ' -f 4)" ;}
# sed '13q;d' "$weatherreport" | grep -o "m\\([-+]\\)*[0-9]\\+" | sed 's/+//g' | sort -n -t 'm' -k 2n | sed -e 1b -e '$!d' | tr '\n|m' ' ' | awk '{print " ðŸ¥¶" $1 "Â°","ðŸŒž" $2 "Â°"}' ;}

getforecast

showweather
