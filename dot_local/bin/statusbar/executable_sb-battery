#!/bin/sh

# Prints all batteries, their percentage remaining and an emoji corresponding
# to charge status (ğŸ”Œ for plugged up, ğŸ”‹ for discharging on battery, etc.).

case $BUTTON in
	1) notify-send "Not implemented..." ;;
	3) notify-send "ğŸ”‹ Battery" "ğŸ”‹: discharging\nâ™»: stagnant charge\nğŸ”Œ: charging\nâš¡: charged\nâ—: battery very low!" ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

# Loop through all attached batteries and format the info
for battery in /sys/class/power_supply/BAT?*; do
	# If non-first battery, print a space separator.
	[ -n "${capacity+x}" ] && printf " "
	# Sets up the status and capacity
	capacity="$(cat "$battery/capacity" 2>&1)"
	case "$(cat "$battery/status" 2>&1)" in
		"Full") status="ï–ƒ " ;;
		"Discharging")
        case "$capacity" in
            100)            status="ï•¸ " ;;
            9[0-9])         status="ï– " ;;
            8[0-9])         status="ï–€ " ;;
            7[0-9])         status="ï•¿ " ;;
            6[0-9])         status="ï•¾ " ;;
            5[0-9])         status="ï•½ " ;;
            4[0-9])         status="ï•¼ " ;;
            3[0-9])         status="ï•» " ;;
            2[0-9])         status="ï•º " ;;
            *)              status="ï–‚ " ;;
        esac ;;
		"Charging")
        case "$capacity" in
            100)            status="ï–ƒ " ;;
            9[0-9])         status="ï–Š " ;;
            8[0-9])         status="ï–‰ " ;;
            6[0-9]|7[0-9])  status="ï–ˆ " ;;
            4[0-9]|5[0-9])  status="ï–‡ " ;;
            3[0-9])         status="ï–† " ;;
            *)              status="ï–… " ;;
        esac ;;
		"Not charging") status="ğŸ›‘" ;;
		"Unknown") status="ï¥‹ " ;;
		*) exit 1 ;;
	esac
	# Prints the info
	printf "%s%d%%" "$status" "$capacity"
done
